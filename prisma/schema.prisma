generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String           @id @default(cuid())
  email                  String           @unique
  emailVerified          DateTime?
  name                   String?
  password               String
  role                   Role             @default(USER)
  image                  String?
  blocked                Boolean          @default(false)
  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt
  customerNotes          String?
  firstBookingDate       DateTime?
  lastBookingDate        DateTime?
  loyaltyPoints          Int              @default(0)
  loyaltyTier            LoyaltyTier      @default(BRONZE)
  marketingOptIn         Boolean          @default(true)
  phone                  String?
  preferredContactMethod PreferredContact @default(EMAIL)
  preferredTypes         Json?
  smsOptIn               Boolean          @default(false)
  tags                   String[]
  totalBookings          Int              @default(0)
  totalSpent             Float            @default(0)
  consentGivenAt         DateTime?
  consentVersion         String?          @db.VarChar(10)
  dataProcessingConsent  Boolean?
  deletionReason         String?
  deletionRequestedAt    DateTime?
  deletionScheduledFor   DateTime?
  marketingConsentUpdatedAt DateTime?
  auditLogs              AuditLog[]
  bookings               Booking[]
  notifications          Notification[]
  notificationPreferences NotificationPreferences?

  @@index([email])
  @@index([role])
  @@index([loyaltyTier])
  @@index([marketingOptIn])
  @@index([deletionRequestedAt])
  @@index([deletionScheduledFor])
}

model Booking {
  id              String        @id @default(cuid())
  userId          String
  title           String
  date            DateTime
  time            String
  type            BookingType
  guestCount      Int
  phone           String
  email           String
  status          BookingStatus @default(PENDING)
  adminNotes      String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  specialRequests String?
  scheduledAt     DateTime
  // Price tracking for loyalty points calculation
  totalAmount     Float?        // Total booking price in the specified currency
  currency        String?       @default("RSD") @db.VarChar(3) // ISO 4217 currency code (RSD, EUR, USD, etc.)
  paidAmount      Float?        // Amount actually paid (for tracking partial payments)
  isPaid          Boolean       @default(false) // Payment status
  paymentDate     DateTime?     // When payment was completed
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([date])
  @@index([scheduledAt])
  @@index([email])
  @@index([userId])
  @@index([status, scheduledAt])
  @@index([isPaid])
  @@index([paymentDate])
}

model Event {
  id              String        @id @default(cuid())
  slug            String        @unique
  title           String
  description     String        @db.Text
  date            DateTime
  time            String
  endTime         String?
  image           String?
  category        EventCategory
  status          EventStatus   @default(DRAFT)
  capacity        Int?
  registeredCount Int           @default(0)
  price           Float?
  currency        String        @default("RSD") @db.VarChar(3)
  location        String?
  isRecurring     Boolean       @default(false)
  recurrenceRule  String?
  tags            String[]
  createdBy       String?
  order           Int           @default(0)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  attendees       EventAttendee[]

  @@index([status])
  @@index([date])
  @@index([slug])
  @@index([category])
  @@index([status, date])
}

model EventAttendee {
  id         String   @id @default(cuid())
  eventId    String
  userId     String?
  name       String
  email      String
  phone      String?
  guestCount Int      @default(1)
  status     RSVPStatus @default(PENDING)
  notes      String?
  registeredAt DateTime @default(now())
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, email])
  @@index([eventId])
  @@index([status])
  @@index([email])
}

model PricingPackage {
  id            String          @id @default(cuid())
  name          String
  price         String?
  category      PricingCategory
  popular       Boolean         @default(false)
  features      Json
  description   String?
  status        PricingStatus   @default(PUBLISHED)
  order         Int             @default(0)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  priceAmount   Decimal?        @db.Decimal(10, 2)
  priceCurrency String?         @default("RSD") @db.VarChar(3)

  @@index([category])
  @@index([status])
  @@index([order])
}

model SiteContent {
  id        String               @id @default(cuid())
  section   String               @unique
  content   Json
  updatedAt DateTime             @updatedAt
  updatedBy String?
  status    ContentStatus        @default(DRAFT)
  version   Int                  @default(1)
  versions  SiteContentVersion[]

  @@index([section])
}

model SiteContentVersion {
  id            String        @id @default(cuid())
  section       String
  version       Int
  status        ContentStatus @default(DRAFT)
  content       Json
  createdAt     DateTime      @default(now())
  createdBy     String?
  siteContentId String
  siteContent   SiteContent   @relation(fields: [siteContentId], references: [id], onDelete: Cascade)

  @@unique([section, version])
  @@index([section])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  entity    String
  entityId  String
  changes   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entity, entityId])
  @@index([createdAt])
}

model MaintenanceLog {
  id            String            @id @default(cuid())
  equipment     String
  area          MaintenanceArea
  description   String
  type          MaintenanceType
  status        MaintenanceStatus @default(SCHEDULED)
  priority      Priority          @default(MEDIUM)
  scheduledDate DateTime
  completedDate DateTime?
  cost          Float?
  performedBy   String?
  notes         String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([status])
  @@index([area])
  @@index([scheduledDate])
  @@index([priority])
}

model InventoryItem {
  id              String            @id @default(cuid())
  name            String
  category        InventoryCategory
  quantity        Int               @default(0)
  unit            String
  reorderPoint    Int               @default(10)
  supplierName    String?
  supplierContact String?
  lastRestocked   DateTime?
  notes           String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([category])
  @@index([quantity])
}

model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  category  String
  updatedAt DateTime @updatedAt
  updatedBy String?

  @@index([category])
  @@index([key])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  data      Json?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@index([userId, read])
}

model NotificationPreferences {
  id                      String   @id @default(cuid())
  userId                  String   @unique
  emailNotifications      Boolean  @default(true)
  // Notification type preferences
  newBooking              Boolean  @default(true)
  bookingApproved         Boolean  @default(true)
  bookingRejected         Boolean  @default(true)
  bookingCancelled        Boolean  @default(true)
  newEventRegistration    Boolean  @default(true)
  eventPublished          Boolean  @default(true)
  eventCancelled          Boolean  @default(true)
  eventFull               Boolean  @default(true)
  lowInventory            Boolean  @default(true)
  maintenanceDue          Boolean  @default(true)
  newUser                 Boolean  @default(true)
  paymentReceived         Boolean  @default(true)
  systemAlert             Boolean  @default(true)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum LoyaltyTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
  VIP
}

enum PreferredContact {
  EMAIL
  PHONE
  SMS
  ANY
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
  COMPLETED
}

enum BookingType {
  CAFE
  SENSORY_ROOM
  PLAYGROUND
  PARTY
  EVENT
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
  COMPLETED
  ARCHIVED
}

enum EventCategory {
  WORKSHOP
  PARTY
  SPECIAL_EVENT
  HOLIDAY
  SEASONAL
  CLASS
  TOURNAMENT
  OTHER
}

enum RSVPStatus {
  PENDING
  CONFIRMED
  CANCELLED
  WAITLIST
}

enum PricingCategory {
  PLAYGROUND
  SENSORY_ROOM
  CAFE
  PARTY
}

enum PricingStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ContentStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

enum MaintenanceArea {
  CAFE
  PLAYGROUND
  SENSORY_ROOM
  GENERAL
  EXTERIOR
}

enum MaintenanceType {
  PREVENTIVE
  REPAIR
  INSPECTION
  CLEANING
  UPGRADE
}

enum MaintenanceStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum InventoryCategory {
  CAFE
  PLAYGROUND
  SENSORY_ROOM
  PARTY_SUPPLIES
  CLEANING
  GENERAL
}

enum NotificationType {
  NEW_BOOKING
  BOOKING_APPROVED
  BOOKING_REJECTED
  BOOKING_CANCELLED
  NEW_EVENT_REGISTRATION
  EVENT_PUBLISHED
  EVENT_CANCELLED
  EVENT_FULL
  LOW_INVENTORY
  MAINTENANCE_DUE
  NEW_USER
  PAYMENT_RECEIVED
  SYSTEM_ALERT
}
