# Database (PostgreSQL)
# For local development, you can use a local PostgreSQL instance or Vercel Postgres
DATABASE_URL="postgresql://user:password@localhost:5432/xplorium"

# For Vercel Postgres (production), you'll get these from Vercel dashboard:
# POSTGRES_URL="postgres://..."
# POSTGRES_PRISMA_URL="postgres://...?pgbouncer=true"
# POSTGRES_URL_NON_POOLING="postgres://..."

# Authentication (NextAuth v5)
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Site Configuration
# Public site URL for SEO, sitemaps, and client-side features
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Email Service (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="noreply@xplorium.com"

# File Upload (Uploadthing)
# Get these from: https://uploadthing.com/dashboard
UPLOADTHING_SECRET="sk_live_..."
UPLOADTHING_APP_ID="..."

# Initial Admin User (for seeding)
# IMPORTANT: Change these values before running in production!
# Password Requirements: Minimum 12 characters with uppercase, lowercase, numbers, and symbols
# Generate a strong password: openssl rand -base64 24
ADMIN_EMAIL="admin@xplorium.com"
ADMIN_PASSWORD="CHANGE_ME_TO_STRONG_PASSWORD_MIN_12_CHARS"
ADMIN_NAME="Xplorium Admin"

# Optional: Rate Limiting (Upstash Redis)
# UPSTASH_REDIS_REST_URL="https://..."
# UPSTASH_REDIS_REST_TOKEN="..."

# Error Tracking (Sentry)
# Get your DSN from: https://sentry.io/settings/projects/your-project/keys/
# Optional: Only needed if you want error tracking in production
NEXT_PUBLIC_SENTRY_DSN="https://...@sentry.io/..."
SENTRY_ORG="your-org-name"
SENTRY_PROJECT="your-project-name"
# For uploading source maps (get from Sentry)
SENTRY_AUTH_TOKEN="sntrys_..."
